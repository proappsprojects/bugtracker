@model IEnumerable<BugTracker.Data.Entities.Bug>

@{
    ViewData["Title"] = "List";
}

<br />
<div class="container row p-0 m-0">

    <div class="col-10">
        <h2 class="text-info">Bug List</h2>
    </div>
    <div class="col-2">
        <a asp-action="Create" class="btn btn-info form-control text-white">Add new</a>
    </div>
</div>

<div class="col-12 border p-3 mt-2">

    @if (Model != null && Model.Count() > 0)
    {
        <table class="table table-striped border">

            <thead>
                <tr><th></th>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.DateCreated)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var bug in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Detail" asp-route-id="@bug.Id">
                                @Html.DisplayFor(m => bug.Id)
                            </a>
</td>
                        <td>
                            @Html.DisplayFor(m => bug.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(m => bug.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(m => bug.DateCreated)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@bug.Id">Edit</a> |
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    }
    else
    {
        <p>No bugs...</p>
    }
</div>
